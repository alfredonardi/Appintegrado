# =============================================================================
# Feature Flags - Controle de Features por Variável de Ambiente
# =============================================================================
# Copie este arquivo para .env e customize conforme necessário
# Formato: VITE_FEATURE_<NOME_FLAG>=true/false
#
# Exemplos:
# VITE_FEATURE_CASESMODULE=true
# VITE_FEATURE_CLIENTSMODULE=false
# VITE_FEATURE_REPORTSMODULE=false

# Core Features (recomenda-se manter ativado)
VITE_FEATURE_AUTH=true

# Módulos Principais
VITE_FEATURE_DASHBOARD=true
VITE_FEATURE_CASESMODULE=true

# Módulos Opcionais (desativados por padrão para desenvolvimento passo-a-passo)
VITE_FEATURE_CLIENTSMODULE=false
VITE_FEATURE_REPORTSMODULE=false
VITE_FEATURE_SETTINGSMODULE=true
VITE_FEATURE_ANALYTICSMODULE=false

# =============================================================================
# API Configuration - Alternador Mock/Real
# =============================================================================
# Use mock API (true) ou real API (false)
VITE_USE_MOCK_API=true

# URL base para API real (se VITE_USE_MOCK_API=false)
VITE_API_BASE_URL=http://localhost:3000

# =============================================================================
# Ambiente de Desenvolvimento
# =============================================================================
# Estes são setados automaticamente por Vite
# VITE_PORT=5173
# VITE_HOST=localhost
